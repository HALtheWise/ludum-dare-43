{
  "manifest_version": 2,
  "name": "The Great Internet Race",
  "description": "Can you find your way?",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "js/types.js",
      "js/navigation.js",
      "js/game.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/types.js",
        "js/page.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
